{
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "compilerOptions": {
        "target": "es6",
        "lib": ["ES2015", "DOM", "DOM.Iterable"],
        "jsx": "react-jsx",
        "jsxImportSource": "@emotion/react",
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "declaration": true,
        "declarationDir": "dist/types",
        "moduleResolution": "Bundler"
    }
}
